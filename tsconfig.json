{
	"exclude": ["dist", "node_modules"],
  	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ES2020",
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"sourceMap": true,
		"inlineSources": true,
		"noImplicitAny": false,
		"incremental": true,
		"strict": true,
		"pretty": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"strictNullChecks": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"types": [],
		"skipLibCheck": true,
	}
}

